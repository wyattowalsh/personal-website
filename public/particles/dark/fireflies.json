{
  "background": {
    "color": {
      "value": "#000000"
    },
    "image": "radial-gradient(circle, rgba(0,0,0,1) 0%, rgba(15,15,40,1) 85%, rgba(0,0,0,1) 100%)",
    "imageOverlay": {
      "url": "star-overlay.webp",
      "position": "center",
      "size": "cover",
      "opacity": 0.5
    }
  },
  "particles": {
    "number": {
      "value": 140,
      "density": {
        "enable": true,
        "area": 1200
      }
    },
    "color": {
      "value": ["#ffff99", "#ffcc66", "#ff9933", "#ffaa99", "#fffacd"]
    },
    "shape": {
      "type": "circle"
    },
    "opacity": {
      "value": {
        "min": 0.1,
        "max": 1
      },
      "animation": {
        "enable": true,
        "speed": 1.8,
        "minimumValue": 0.1,
        "sync": false
      }
    },
    "size": {
      "value": {
        "min": 2,
        "max": 12
      },
      "animation": {
        "enable": true,
        "speed": 0.8,
        "minimumValue": 2,
        "sync": false
      },
      "random": true
    },
    "move": {
      "enable": true,
      "speed": 1,
      "direction": "none",
      "outModes": {
        "default": "out"
      },
      "random": true,
      "straight": false,
      "vibrate": true
    },
    "twinkle": {
      "particles": {
        "enable": true,
        "frequency": 0.2,
        "opacity": 1
      }
    },
    "stroke": {
      "width": 2,
      "color": {
        "value": "#fffacd"
      }
    }
  },
  "interactivity": {
    "events": {
      "onHover": {
        "enable": true,
        "mode": ["bubble", "repulse", "attract", "grab"]
      },
      "onClick": {
        "enable": true,
        "mode": ["push", "remove"]
      }
    },
    "modes": {
      "bubble": {
        "distance": 180,
        "size": 16,
        "duration": 3.5,
        "opacity": 1
      },
      "repulse": {
        "distance": 200,
        "duration": 0.7
      },
      "attract": {
        "distance": 120,
        "duration": 1.2
      },
      "grab": {
        "distance": 150,
        "links": {
          "opacity": 1
        }
      },
      "push": {
        "quantity": 8
      },
      "remove": {
        "quantity": 4
      }
    }
  },
  "detectRetina": true
}
