{
  "autoPlay": true,
  "background": {
    "color": {
      "value": "#020202"
    },
    "opacity": 1
  },
  "fullScreen": {
    "enable": false
  },
  "detectRetina": true,
  "fpsLimit": 120,
  "particles": {
    "number": {
      "value": 250,
      "density": {
        "enable": true,
        "area": 800
      }
    },
    "color": {
      "value": ["#ff0080", "#00ff80", "#8000ff", "#ffbf00", "#ffffff"]
    },
    "shape": {
      "type": ["circle", "star", "polygon", "triangle"],
      "options": {
        "polygon": {
          "sides": 6
        }
      }
    },
    "opacity": {
      "value": {
        "min": 0.1,
        "max": 1
      },
      "animation": {
        "enable": true,
        "speed": 1.2,
        "minimumValue": 0.1,
        "sync": false
      }
    },
    "size": {
      "value": {
        "min": 1,
        "max": 10
      },
      "animation": {
        "enable": true,
        "speed": 5,
        "minimumValue": 1,
        "sync": false
      }
    },
    "links": {
      "enable": true,
      "distance": 150,
      "color": {
        "value": "#ffffff"
      },
      "opacity": 0.4,
      "width": 2
    },
    "move": {
      "enable": true,
      "speed": 1,
      "direction": "none",
      "outModes": {
        "default": "out"
      },
      "straight": false,
      "trail": {
        "enable": true,
        "length": 20,
        "fill": {
          "color": "#020202"
        }
      }
    },
    "zIndex": {
      "value": {
        "min": 0,
        "max": 100
      },
      "opacityRate": 0.5
    }
  },
  "interactivity": {
    "events": {
      "onHover": {
        "enable": true,
        "mode": ["bubble", "connect"]
      },
      "onClick": {
        "enable": true,
        "mode": ["remove", "repulse"]
      },
      "resize": true
    },
    "modes": {
      "bubble": {
        "distance": 250,
        "size": 15,
        "duration": 2,
        "opacity": 0.8
      },
      "connect": {
        "distance": 120,
        "links": {
          "opacity": 0.5
        }
      },
      "repulse": {
        "distance": 200,
        "duration": 1
      },
      "remove": {
        "quantity": 2
      }
    }
  },
  "pauseOnBlur": true,
  "pauseOnOutsideViewport": true
}
