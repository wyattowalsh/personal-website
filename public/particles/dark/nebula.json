{
  "background": {
    "color": {
      "value": "#020202"
    },
    "image": "radial-gradient(circle, #020202, #0a0a0a, #151515)"
  },
  "fpsLimit": 165,
  "particles": {
    "number": {
      "value": 250,
      "density": {
        "enable": true,
        "area": 1500
      }
    },
    "color": {
      "value": ["#ff0080", "#00ff80", "#8000ff", "#ffbf00", "#ffffff"]
    },
    "shape": {
      "type": ["circle", "star", "polygon", "triangle"],
      "polygon": {
        "sides": 6
      }
    },
    "opacity": {
      "value": {
        "min": 0.1,
        "max": 1
      },
      "random": true,
      "animation": {
        "enable": true,
        "speed": 1.2,
        "minimumValue": 0.1,
        "sync": false
      }
    },
    "size": {
      "value": {
        "min": 1,
        "max": 10
      },
      "random": true,
      "animation": {
        "enable": true,
        "speed": 10,
        "minimumValue": 1,
        "sync": false
      }
    },
    "links": {
      "enable": true,
      "distance": 180,
      "color": ["#ffffff", "#00ff80"],
      "opacity": 0.4,
      "width": 2.5,
      "shadow": {
        "enable": true,
        "blur": 10,
        "color": "#444444"
      }
    },
    "move": {
      "enable": true,
      "speed": 1.5,
      "direction": "none",
      "outModes": {
        "default": "out"
      },
      "random": true,
      "straight": false,
      "trail": {
        "enable": true,
        "length": 25,
        "fillColor": "#020202"
      },
      "path": {
        "enable": true,
        "generator": "flowField"
      }
    },
    "parallax": {
      "enable": true,
      "force": 150,
      "smooth": 50
    }
  },
  "interactivity": {
    "events": {
      "onHover": {
        "enable": true,
        "mode": ["bubble", "connect"]
      },
      "onClick": {
        "enable": true,
        "mode": ["remove", "repulse"]
      }
    },
    "modes": {
      "bubble": {
        "distance": 400,
        "size": 18,
        "duration": 3.5,
        "opacity": 1
      },
      "push": {
        "quantity": 10
      },
      "remove": {
        "quantity": 4
      },
      "connect": {
        "distance": 150,
        "links": {
          "opacity": 0.5
        },
        "radius": 80
      },
      "repulse": {
        "distance": 300,
        "duration": 1
      }
    }
  },
  "detectRetina": true
}
